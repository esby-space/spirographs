---
import Layout from "../components/layout.astro";
import Nav from "./nav.astro";
---

<Layout>
    <header>
        <h1>The Entrancing World of The Spirograph</h1>
    </header>

    <main>
        <slot />
    </main>

    <Nav />
</Layout>

<style>
    header {
        width: 100vw;
        height: 100vh;
        display: grid;
        place-content: center;
    }

    main {
        margin-inline: auto;
        width: calc(100% - 8rem);
        max-width: 800px;
    }
</style>
